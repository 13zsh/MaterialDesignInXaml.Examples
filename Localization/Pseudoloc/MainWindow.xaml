<Window x:Class="Pseudoloc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pseudoloc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{local:Loc HelloWorld_Text}"
                   FontSize="{local:Loc HelloWorld_FontSize, Fallback=24}" 
                   HorizontalAlignment="Center" />
        <TextBlock x:Name="FromCodeBehind" HorizontalAlignment="Center" />
    </StackPanel>
</Window>
