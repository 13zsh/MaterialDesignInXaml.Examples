<UserControl x:Class="DialogHost.RoutedCommand.SimpleDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DialogHost.RoutedCommand"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Do some work and close?" Grid.ColumnSpan="2" Margin="10"/>
        <Button Content="No" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0" Click="No_Click"/>
        <Button Content="Yes" Grid.Column="1" Grid.Row="1" Click="Yes_Click"/>
    </Grid>
</UserControl>
