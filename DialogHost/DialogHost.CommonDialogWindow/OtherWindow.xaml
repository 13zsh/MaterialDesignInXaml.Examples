<Window x:Class="DialogHost.CommonDialogWindow.OtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogHost.CommonDialogWindow"
        mc:Ignorable="d"
        Title="OtherWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=local:OtherWindowViewModel}"
        local:DialogHostEx.Identifier="{Binding DialogHostIdentifier}"
        Style="{StaticResource DialogWindowStyle}">
    <Grid>
        <Button Content="Show Dialog" Command="{Binding ShowDialogCommand}" 
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
